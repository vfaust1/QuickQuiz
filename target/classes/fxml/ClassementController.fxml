<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="30.0" style="-fx-background-image: url('/img/fond.jpg'); -fx-background-size: cover; -fx-background-position: center center; -fx-background-repeat: no-repeat;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizgame.controllers.ClassementController">
   <children>
      <!-- Image en-tête Classement -->
      <ImageView fitWidth="500" preserveRatio="true">
         <image>
            <Image url="/img/Classement.png" />
         </image>
      </ImageView>
      
      <!-- Titre et boutons en haut -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnMode" mnemonicParsing="false" onAction="#onModeClick" text="Mode" style="-fx-background-color: rgba(0, 0, 0, 0.25); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-padding: 8 16; -fx-cursor: hand;" />
                  <Button fx:id="btnTheme" mnemonicParsing="false" onAction="#onThemeClick" text="Theme" style="-fx-background-color: rgba(0, 0, 0, 0.25); -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: rgba(255, 255, 255, 0.1); -fx-padding: 8 16; -fx-cursor: hand;" />
               </children>
            </HBox>
         </children>
      </HBox>
      
      <!-- Podium avec image et noms superposés -->
      <StackPane maxWidth="600" prefWidth="600">
         <children>
            <!-- Image du podium en arrière-plan -->
            <ImageView fitWidth="600" preserveRatio="true">
               <image>
                  <Image url="/img/podium.png" />
               </image>
            </ImageView>
            
            <!-- 2ème place (gauche) -->
            <VBox alignment="CENTER" spacing="2.0" styleClass="podium-step podium-step-2" StackPane.alignment="BOTTOM_LEFT">
               <children>
                  <Label fx:id="lblJoueur2" text="Joueur 2" styleClass="podium-name" style="-fx-text-fill: #C0C0C0; -fx-font-size: 22px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 0.75);" />
                  <Label fx:id="lblScore2" text="18/20" styleClass="podium-score" style="-fx-text-fill: #C0C0C0; -fx-font-size: 18px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 0.75);" />
               </children>
               <StackPane.margin>
                  <Insets bottom="65.0" left="-265.0" />
               </StackPane.margin>
            </VBox>
            
            <!-- 1ère place (centre) -->
            <VBox alignment="CENTER" spacing="2.0" styleClass="podium-step podium-step-1" StackPane.alignment="BOTTOM_CENTER">
               <children>
                  <Label fx:id="lblJoueur1" text="Joueur 1" styleClass="podium-name" style="-fx-text-fill: #FFD700; -fx-font-size: 24px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 1);" />
                  <Label fx:id="lblScore1" text="20/20" styleClass="podium-score" style="-fx-text-fill: #FFD700; -fx-font-size: 18px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 1);" />
               </children>
               <StackPane.margin>
                  <Insets bottom="130.0" />
               </StackPane.margin>
            </VBox>
            
            <!-- 3ème place (droite) -->
            <VBox alignment="CENTER" spacing="2.0" styleClass="podium-step podium-step-3" StackPane.alignment="BOTTOM_RIGHT">
               <children>
                  <Label fx:id="lblJoueur3" text="Joueur 3" styleClass="podium-name" style="-fx-text-fill: #CD7F32; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 0.5);" />
                  <Label fx:id="lblScore3" text="16/20" styleClass="podium-score" style="-fx-text-fill: #CD7F32; -fx-font-size: 18px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 3, 0, 0, 0.25);" />
               </children>
               <StackPane.margin>
                  <Insets bottom="0.0" right="-265.0" />
               </StackPane.margin>
            </VBox>
         </children>
      </StackPane>
      
      <!-- Liste détaillée du classement -->
      <ScrollPane fx:id="scrollPane" fitToWidth="true" maxHeight="275.0" prefHeight="275.0" prefWidth="500.0" maxWidth="1000.0" styleClass="classement-scroll">
         <content>
            <VBox fx:id="vboxClassement" alignment="CENTER" spacing="2.0" />
         </content>
      </ScrollPane>
      
      <!-- Bouton Retour en bas au centre -->
      <Button fx:id="btnRetour" mnemonicParsing="false" onAction="#onRetourClick" styleClass="back-button" text="Retour" />
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
