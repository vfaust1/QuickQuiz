<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizgame.controllers.ProfilMenuController" fx:id="rootPane" style="-fx-background-image: url('/img/fond.jpg'); -fx-background-size: 100% 100%; -fx-background-position: center center; -fx-background-repeat: no-repeat;">
   <children>
      <!-- Contenu principal -->
      <VBox alignment="CENTER" spacing="30.0">
         <children>
            <!-- Logo Quick Quiz -->
            <ImageView fx:id="imgLogo" preserveRatio="true" pickOnBounds="true">
               <image>
                  <Image url="/img/QuickQuiz.png" />
               </image>
            </ImageView>

            <!-- Boutons du menu profil -->
            <Button fx:id="btnChoisirProfil" maxWidth="400" minWidth="200.0" mnemonicParsing="false" onAction="#onChoisirProfilClick" prefHeight="60.0" minHeight="40.0" styleClass="menu-button" text="Choisir un profil">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnQuitter" maxWidth="400" minWidth="200.0" mnemonicParsing="false" onAction="#onQuitterClick" prefHeight="60.0" minHeight="40.0" styleClass="menu-button" text="Quitter">
               <font>
                  <Font name="Arial Bold" size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
