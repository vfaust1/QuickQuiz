<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quizgame.controllers.ProfileSelectionController" style="-fx-background-image: url('/img/fond.jpg'); -fx-background-size: 100% 100%; -fx-background-position: center center; -fx-background-repeat: no-repeat;">
    <children>
        <AnchorPane prefWidth="400" prefHeight="350">
            <children>
                <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                    <padding>
                        <Insets top="30.0" />
                    </padding>
                    <children>
                        <ImageView fitWidth="600" preserveRatio="true">
                            <image>
                                <Image url="/img/ChoixProfil.png" />
                            </image>
                        </ImageView>
                        <ListView fx:id="profileListView" prefHeight="500" prefWidth="320" maxWidth="600" styleClass="profile-list-view" />
                        <HBox alignment="CENTER" spacing="15">
                            <Button fx:id="cancelButton" text="Retour" styleClass="menu-button" maxWidth="250" HBox.hgrow="ALWAYS" />
                            <Button fx:id="addProfileButton" text="Ajouter un profil" styleClass="menu-button" maxWidth="250" HBox.hgrow="ALWAYS" />
                            <Button fx:id="validateButton" text="Valider" styleClass="menu-button" maxWidth="250" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox fx:id="addProfileBox" alignment="CENTER" spacing="10" visible="false" managed="false" maxWidth="600" styleClass="add-profile-box">
                            <children>
                                <TextField fx:id="newProfileTextField" promptText="Nom du nouveau profil" HBox.hgrow="ALWAYS" />
                                <Button fx:id="confirmAddButton" text="Ajouter" styleClass="menu-button" />
                            </children>
                            <VBox.margin>
                                <Insets top="10" />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
